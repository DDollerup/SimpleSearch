@using SimpleSearch.Models;
@model List<Item>
@{
    ViewBag.Title = "ShowAllItems";
}

<h2>ShowAllItems</h2>
<div class="col-lg-12">
    @if (Model.Count > 0)
    {
        foreach (Item item in Model)
        {
            <a href="/Home/ShowItem/@item.ID">
                <table class="table-responsive">
                    <tr>
                        <td>
                            @item.Name
                        </td>
                    </tr>
                </table>
            </a>
        }
    }
    else
    {
        <p>
            Søgningen gav ingen resultater.
        </p>
    }
</div>